<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Redirect to public" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_URI}" pattern="^/public/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/public/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    <handlers>
      <add name="php" path="public/index.php" verb="*" modules="FastCgiModule" scriptProcessor="C:\Program Files (x86)\PHP\v7.4\php-cgi.exe" resourceType="Either" requireAccess="Script" />
      <remove name="php" />
    </handlers>
    <defaultDocument>
      <files>
        <clear />
        <add value="public/index.php" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>

